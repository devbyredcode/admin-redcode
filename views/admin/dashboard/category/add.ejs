<%- include('../../component/head.ejs') %>
<body class="light sidebar-mini sidebar-collapse">
<%- include('../../component/loading-screen.ejs') %> 
<div id="app">
    <%- include('../../component/sidebar.ejs') %> 
    <div class="has-sidebar-left has-sidebar-tabs">
        <%- include('../../component/navbar.ejs') %> 
        <div class="container-fluid relative animatedParent animateOnce my-3">
            <div class="card mb-3 shadow no-b r-0">
                <div class="card-header white">
                    <h6>ADD CATEGORY</h6>
                </div>
                <div class="card card-body p-3 b-0">
                    <form action="/admin/category/add" method="POST" class="needs-validation" novalidate>
                        <div class="form-row">
                            <div class="col-md-12 mb-3">
                                <label for="inputFirstName">Category Name</label>
                                <input type="text" class="form-control" name="input_category_name" id="inputCategoryName" placeholder="Type First name" value="" autocomplete="off" required>
                                <div class="valid-feedback">Form valid</div><div class="invalid-feedback">Dont let it empty and only use aplhabet</div>
                            </div>
                            <div class="col-md-12 mb-3">
                                <label for="inputRoles">Category Type</label>
                                <select class="form-control" id="inputCategoryType" name="input_category_type" required>
                                    <option value="" class="select-placeholder">Select Type</option>
                                    <option value="Story">Story</option>
                                    <option value="Case Study">Case Study</option>
                                    <option value="Playground">Playground</option>
                                </select>
                                <div class="valid-feedback">Form valid</div><div class="invalid-feedback">Dont let it empty and choose one</div>
                            </div>
                        </div>
                        <button class="btn btn-primary btn-block mt-3" type="submit">ADD CATEGORY</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="control-sidebar-bg shadow white fixed"></div>
</div>
<%- include('../../component/footer.ejs') %> 
